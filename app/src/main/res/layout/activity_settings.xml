<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sustainablehealthsolutionsllc.bitecounter.SettingsActivity"
    android:background="@drawable/backrepeat">


    <!--This is for changing the buzzer-->
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:text="Change Buzzer"
        android:onClick="buzzerAlert"/>

    <!--This is for changing the limit-->
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="150dp"
        android:text="Change the Limit"
        android:onClick="limitAlert"/>


    <!--This is to change the number of bites please don't use me-->
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="250dp"
        android:text="Change the number of bites"
        android:onClick="biteAlert"/>


</RelativeLayout>
