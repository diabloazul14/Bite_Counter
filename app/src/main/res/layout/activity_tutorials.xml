<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="sustainablehealthsolutionsllc.bitecounter.Tutorials">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
    <!--Counter Button to return to counter activity-->
  <Button
      android:layout_height="50dp"
      android:layout_width="150dp"
      android:text="Counter"
      android:layout_marginLeft="0dp"/>

  <!--Graph Button to return to Graph Page-->
  <Button
      android:layout_height="50dp"
      android:layout_width="100dp"
      android:text="Graphs"
      android:layout_marginLeft="150dp"/>

  <!--About Us Button to go to About us Activity-->
  <Button
      android:layout_height="50dp"
      android:layout_width="100dp"
      android:text="AboutUs"
      android:layout_marginLeft="250dp"/>
    </LinearLayout>
</ScrollView>
