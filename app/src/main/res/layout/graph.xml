<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context=".Graph"
    android:id="@+id/graph">
    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:id="@+id/layoutForScroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Day Chart-->
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/dayView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ten_dp"
                    android:text="@string/dayremain"
                    android:textStyle="bold"
                    android:textColor="@color/light_gray"
                    android:gravity="center" />
                <TextView
                    android:id="@+id/dayLeft"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fifteen_dp"
                    android:text="@string/hprogress"
                    android:textStyle="bold"
                    android:textColor="@color/light_gray"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/progressbar"
                    android:gravity="right" />
                <ProgressBar
                    android:id="@+id/progressbar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:progressDrawable="@drawable/horizontal_progressbar"
                    android:layout_below="@+id/dayView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />â€‹
            </LinearLayout>

            <!--Bites Chart-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/biteView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ten_dp"
                    android:text="Bites"
                    android:textStyle="bold"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/chart"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    tools:ignore="Orientation"
                    android:layout_above="@+id/chart2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical">
                </LinearLayout>
            </LinearLayout>

            <!--Weight Chart-->
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/weightView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/ten_dp"
                    android:text="Weight"
                    android:textStyle="bold"
                    android:textColor="@color/light_gray"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:id="@+id/chart2"
                    android:layout_width="fill_parent"
                    android:layout_height="150dp"
                    tools:ignore="Orientation"
                    android:layout_above="@+id/bmiText"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical">
                </LinearLayout>
            </LinearLayout>

            <!--BMI Display-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bmiText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="BMI"
                    android:textSize="@dimen/ten_dp"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_above="@+id/bmiGraph" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bmiGraph"
                    android:text="100"
                    android:textSize="30pt"
                    android:gravity="center"
                    android:layout_above="@+id/bmiButton"
                    android:paddingBottom="10dp"/>
            </LinearLayout>

            <!--Buttons-->
            <Button
                android:id="@+id/bmiButton"
                android:background="@drawable/bmi_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/backButton"
                android:onClick="startAlertDialog1"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
