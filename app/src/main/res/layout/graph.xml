<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context=".Graph">

    <TextView
        android:id="@+id/dayView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ten_dp"
        android:text="@string/dayremain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dayLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/twenty_dp"
        android:text="@string/hprogress"
        android:layout_marginLeft="260dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_below="@+id/progressbar"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/horizontal_progressbar"
        android:layout_below="@+id/dayView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="startAlertDialog"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_below="@+id/chart2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="50dp"
        android:layout_width="75dp"
        android:text="BMI"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="250dp"
        android:onClick="startAlertDialog1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="145dp"
        android:text="BMI"
        android:textSize="15pt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bmiGraph"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="90dp"
        android:text="0"
        android:textSize="15pt"/>


    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="300dp"
        android:layout_height="150dp"
        tools:ignore="Orientation"
        android:layout_below="@+id/dayLeft"
        android:layout_alignLeft="@+id/chart2"
        android:layout_alignStart="@+id/chart2"
        android:layout_marginTop="53dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        tools:ignore="Orientation"
        android:layout_below="@+id/chart"
        android:layout_centerHorizontal="true">
    </LinearLayout>
</RelativeLayout>
