<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/btn_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="Chart 1" />

    <Button
        android:id="@+id/btn_chart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chart 2"
        android:layout_alignTop="@+id/btn_chart"
        android:layout_toRightOf="@+id/btn_chart"
        android:layout_toEndOf="@+id/btn_chart" />

    <Button
        android:id="@+id/btn_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter"
        android:layout_alignTop="@+id/btn_chart"
        android:layout_toLeftOf="@+id/btn_chart"
        android:layout_toStartOf="@+id/btn_chart" />

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="300dp"
        android:layout_height="150dp"
        tools:ignore="Orientation"
        android:layout_below="@+id/btn_chart"
        android:layout_centerHorizontal="true">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chart2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        tools:ignore="Orientation"
        android:layout_below="@+id/chart"
        android:layout_alignLeft="@+id/chart"
        android:layout_alignStart="@+id/chart">
    </LinearLayout>
</RelativeLayout>
